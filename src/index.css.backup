/* Import Cyberpunk Fonts */
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&family=Share+Tech+Mono:wght@400&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/* ========== CYBERPUNK/TECHCORE DESIGN SYSTEM ========== */
:root {
  /* Neon Color Palette */
  --neon-cyan: #00ffff;
  --neon-pink: #ff00ff;
  --neon-purple: #8a2be2;
  --neon-green: #00ff41;
  --neon-orange: #ff6600;
  --neon-blue: #0080ff;
  --neon-red: #ff0040;
  --neon-yellow: #ffff00;
  
  /* Cyberpunk Gradients */
  --cyber-gradient-1: linear-gradient(135deg, #00ffff 0%, #ff00ff 50%, #8a2be2 100%);
  --cyber-gradient-2: linear-gradient(135deg, #ff6600 0%, #ff0040 50%, #8a2be2 100%);
  --cyber-gradient-3: linear-gradient(135deg, #00ff41 0%, #00ffff 50%, #0080ff 100%);
  --cyber-matrix: linear-gradient(180deg, #001100 0%, #003300 50%, #001100 100%);
  --holo-gradient: linear-gradient(45deg, rgba(0,255,255,0.3) 0%, rgba(255,0,255,0.3) 25%, rgba(0,255,65,0.3) 50%, rgba(255,102,0,0.3) 75%, rgba(0,128,255,0.3) 100%);
  
  /* Dark Theme Base */
  --bg-primary: #0a0a0a;
  --bg-secondary: #111111;
  --bg-tertiary: #1a1a1a;
  --bg-elevated: #1f1f1f;
  --bg-glass: rgba(0, 0, 0, 0.7);
  
  /* Text Colors */
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --text-tertiary: #999999;
  --text-muted: #666666;
  --text-neon: var(--neon-cyan);
  --text-accent: var(--neon-pink);
  
  /* Surface Colors */
  --surface: rgba(26, 26, 26, 0.9);
  --surface-secondary: rgba(17, 17, 17, 0.9);
  --surface-tertiary: rgba(31, 31, 31, 0.9);
  --surface-glass: rgba(0, 0, 0, 0.3);
  
  /* Border Colors */
  --border-primary: rgba(0, 255, 255, 0.3);
  --border-secondary: rgba(255, 0, 255, 0.2);
  --border-accent: rgba(0, 255, 65, 0.3);
  --border-neon: rgba(0, 255, 255, 0.8);
  
  /* Shadows */
  --shadow-neon-cyan: 0 0 20px rgba(0, 255, 255, 0.5);
  --shadow-neon-pink: 0 0 20px rgba(255, 0, 255, 0.5);
  --shadow-neon-green: 0 0 20px rgba(0, 255, 65, 0.5);
  --shadow-cyber: 0 8px 32px rgba(0, 0, 0, 0.8), 0 0 20px rgba(0, 255, 255, 0.2);
  --shadow-holo: 0 4px 20px rgba(255, 0, 255, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  
  
  /* Animation Variables */
  --animation-speed-ultra: 0.05s;
  --animation-speed-fastest: 0.1s;
  --animation-speed-fast: 0.2s;
  --animation-speed-normal: 0.3s;
  --animation-speed-slow: 0.5s;
  --animation-speed-slower: 0.8s;
  --animation-speed-slowest: 1.2s;
  --animation-ease: cubic-bezier(0.25, 0.1, 0.25, 1);
  --animation-ease-cyber: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --animation-ease-glitch: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --animation-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --animation-elastic: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  
  /* Typography Scale */
  --font-cyber: 'Orbitron', monospace;
  --font-tech: 'Rajdhani', sans-serif;
  --font-mono: 'Share Tech Mono', monospace;
  
  /* Spacing & Sizing */
  --grid-size: 20px;
  --neon-thickness: 2px;
  --border-radius-cyber: 4px;
  --blur-amount: 10px;
}

/* ========== CYBERPUNK BASE STYLES ========== */
* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  font-family: var(--font-tech);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.6;
  overflow-x: hidden;
  position: relative;
}

/* Cyberpunk Grid Background */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-image: 
    linear-gradient(rgba(0,255,255,0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0,255,255,0.03) 1px, transparent 1px),
    radial-gradient(circle at 25% 25%, rgba(0,255,255,0.1) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(255,0,255,0.1) 0%, transparent 50%);
  background-size: var(--grid-size) var(--grid-size), var(--grid-size) var(--grid-size), 400px 400px, 400px 400px;
  z-index: -2;
  pointer-events: none;
  animation: gridPulse 4s ease-in-out infinite alternate;
}

/* Digital Scan Lines */
body::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0,255,255,0.03) 2px,
    rgba(0,255,255,0.03) 4px
  );
  z-index: -1;
  pointer-events: none;
  animation: scanLines 0.1s linear infinite;
}

/* ========== CYBERPUNK ANIMATIONS ========== */

/* Grid Pulse Animation */
@keyframes gridPulse {
  0% { opacity: 0.3; }
  100% { opacity: 0.6; }
}

/* Scan Lines Animation */
@keyframes scanLines {
  0% { transform: translateY(0); }
  100% { transform: translateY(4px); }
}

/* Neon Glow Animation */
@keyframes neonGlow {
  0%, 100% { 
    text-shadow: 0 0 5px currentColor, 0 0 10px currentColor, 0 0 20px currentColor;
    filter: brightness(1);
  }
  50% { 
    text-shadow: 0 0 10px currentColor, 0 0 20px currentColor, 0 0 40px currentColor;
    filter: brightness(1.2);
  }
}

/* Glitch Effect */
@keyframes glitch {
  0% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
  100% { transform: translate(0); }
}

/* Hologram Flicker */
@keyframes hologram {
  0%, 100% { opacity: 1; filter: hue-rotate(0deg); }
  25% { opacity: 0.8; filter: hue-rotate(90deg); }
  50% { opacity: 0.9; filter: hue-rotate(180deg); }
  75% { opacity: 0.7; filter: hue-rotate(270deg); }
}

/* Digital Rain */
@keyframes digitalRain {
  0% { transform: translateY(-100vh) scaleY(0); opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { transform: translateY(100vh) scaleY(1); opacity: 0; }
}

/* Circuit Trace */
@keyframes circuitTrace {
  0% { stroke-dashoffset: 1000; }
  100% { stroke-dashoffset: 0; }
}

/* Cyber Pulse */
@keyframes cyberPulse {
  0%, 100% { 
    box-shadow: 0 0 5px var(--neon-cyan), inset 0 0 5px var(--neon-cyan);
    border-color: var(--neon-cyan);
  }
  50% { 
    box-shadow: 0 0 20px var(--neon-cyan), 0 0 30px var(--neon-cyan), inset 0 0 10px var(--neon-cyan);
    border-color: var(--neon-pink);
  }
}

/* Matrix Code */
@keyframes matrixCode {
  0% { opacity: 0; transform: translateY(-10px); }
  50% { opacity: 1; }
  100% { opacity: 0; transform: translateY(10px); }
}

/* Neon Border Trace */
@keyframes borderTrace {
  0% { 
    background-position: 0% 50%;
  }
  50% { 
    background-position: 100% 50%;
  }
  100% { 
    background-position: 0% 50%;
  }
}

/* Focus styles with cyberpunk theme */
*:focus {
  outline: var(--neon-thickness) solid var(--neon-cyan);
  outline-offset: 2px;
  border-radius: var(--border-radius-cyber);
  box-shadow: var(--shadow-neon-cyan);
}

/* Card utilities */
.card {
  background: var(--surface);
  border-radius: 16px;
  box-shadow: var(--shadow);
  border: 1px solid #e2e8f0;
  transition: all var(--animation-speed-normal) var(--animation-ease);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left var(--animation-speed-slower) var(--animation-ease);
  pointer-events: none;
}

.card-hover:hover {
  box-shadow: var(--shadow-xl);
  transform: translateY(-8px) scale(1.02);
  border-color: var(--primary-300);
}

.card-hover:hover::before {
  left: 100%;
}

.card-interactive {
  background: var(--surface);
  border-radius: 16px;
  box-shadow: var(--shadow);
  border: 1px solid #e2e8f0;
  transition: all var(--animation-speed-normal) var(--animation-ease);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.card-interactive::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(59, 130, 246, 0.1) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform var(--animation-speed-slow) var(--animation-ease);
  pointer-events: none;
}

.card-interactive:hover {
  transform: translateY(-12px);
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  border-color: var(--primary-400);
}

.card-interactive:hover::after {
  transform: translateX(100%);
}

.card-flip {
  perspective: 1000px;
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.card-flip:hover {
  transform: rotateY(10deg) rotateX(5deg);
}

/* ========== CYBERPUNK TYPOGRAPHY ========== */

/* Neon Text Effects */
.neon-text {
  color: var(--neon-cyan);
  text-shadow: 0 0 5px currentColor, 0 0 10px currentColor, 0 0 20px currentColor;
  animation: neonGlow 2s ease-in-out infinite alternate;
}

.neon-pink {
  color: var(--neon-pink);
  text-shadow: 0 0 5px var(--neon-pink), 0 0 10px var(--neon-pink), 0 0 20px var(--neon-pink);
}

.neon-green {
  color: var(--neon-green);
  text-shadow: 0 0 5px var(--neon-green), 0 0 10px var(--neon-green), 0 0 20px var(--neon-green);
}

.neon-orange {
  color: var(--neon-orange);
  text-shadow: 0 0 5px var(--neon-orange), 0 0 10px var(--neon-orange), 0 0 20px var(--neon-orange);
}

/* Gradient Text Effects */
.gradient-text {
  background: var(--cyber-gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% 200%;
  animation: borderTrace 3s linear infinite;
}

.gradient-cyber {
  background: var(--cyber-gradient-2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% 200%;
  animation: borderTrace 2s linear infinite;
}

.gradient-matrix {
  background: var(--cyber-gradient-3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% 200%;
  animation: borderTrace 4s linear infinite;
}

/* Glitch Text */
.glitch-text {
  position: relative;
  color: var(--text-primary);
  animation: glitch 0.3s ease-in-out infinite;
}

.glitch-text::before,
.glitch-text::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--bg-primary);
}

.glitch-text::before {
  color: var(--neon-pink);
  animation: glitch 0.3s ease-in-out infinite;
  z-index: -1;
  transform: translate(-2px, 1px);
  clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
}

.glitch-text::after {
  color: var(--neon-cyan);
  animation: glitch 0.3s ease-in-out infinite reverse;
  z-index: -2;
  transform: translate(2px, -1px);
  clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
}

/* Hologram Text */
.holo-text {
  color: var(--text-primary);
  animation: hologram 3s ease-in-out infinite;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
}

/* Cyber Fonts */
.font-cyber {
  font-family: var(--font-cyber);
  font-weight: 600;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.font-tech {
  font-family: var(--font-tech);
  font-weight: 500;
}

.font-mono {
  font-family: var(--font-mono);
  font-weight: 400;
}

/* Button styles */
.btn-primary {
  background: var(--primary-gradient);
  color: white;
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  filter: brightness(110%);
}

.btn-secondary {
  background: var(--surface);
  color: var(--text-primary);
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #e2e8f0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-secondary:hover {
  border-color: var(--primary-500);
  color: var(--primary-600);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Floating animation */
.floating {
  animation: floating 6s ease-in-out infinite;
}

@keyframes floating {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

/* ============ COMPREHENSIVE ANIMATION SYSTEM ============ */

/* Page Entrance Animations */
.page-enter {
  animation: pageEnter var(--animation-speed-slower) var(--animation-ease-out) forwards;
}

@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(40px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.page-enter-from-left {
  animation: pageEnterLeft var(--animation-speed-slower) var(--animation-ease-out) forwards;
}

@keyframes pageEnterLeft {
  from {
    opacity: 0;
    transform: translateX(-100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.page-enter-from-right {
  animation: pageEnterRight var(--animation-speed-slower) var(--animation-ease-out) forwards;
}

@keyframes pageEnterRight {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Stagger Animation Classes */
.stagger-children > * {
  opacity: 0;
  animation: fadeInUp var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

.stagger-children > *:nth-child(1) { animation-delay: 0.1s; }
.stagger-children > *:nth-child(2) { animation-delay: 0.2s; }
.stagger-children > *:nth-child(3) { animation-delay: 0.3s; }
.stagger-children > *:nth-child(4) { animation-delay: 0.4s; }
.stagger-children > *:nth-child(5) { animation-delay: 0.5s; }
.stagger-children > *:nth-child(6) { animation-delay: 0.6s; }
.stagger-children > *:nth-child(7) { animation-delay: 0.7s; }
.stagger-children > *:nth-child(8) { animation-delay: 0.8s; }
.stagger-children > *:nth-child(9) { animation-delay: 0.9s; }

/* Fade Animations */
.fade-in {
  animation: fadeIn var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-up {
  animation: fadeInUp var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-down {
  animation: fadeInDown var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-left {
  animation: fadeInLeft var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.fade-in-right {
  animation: fadeInRight var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Scale Animations */
.scale-in {
  animation: scaleIn var(--animation-speed-slow) var(--animation-bounce) forwards;
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.scale-in-center {
  animation: scaleInCenter var(--animation-speed-slow) var(--animation-elastic) forwards;
}

@keyframes scaleInCenter {
  from {
    opacity: 0;
    transform: scale(0.3);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Rotation Animations */
.rotate-in {
  animation: rotateIn var(--animation-speed-slower) var(--animation-ease-out) forwards;
}

@keyframes rotateIn {
  from {
    opacity: 0;
    transform: rotate(-200deg) scale(0.8);
  }
  to {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }
}

.wiggle {
  animation: wiggle var(--animation-speed-normal) ease-in-out;
}

@keyframes wiggle {
  0%, 7% { transform: rotateZ(0); }
  15% { transform: rotateZ(-15deg); }
  20% { transform: rotateZ(10deg); }
  25% { transform: rotateZ(-10deg); }
  30% { transform: rotateZ(6deg); }
  35% { transform: rotateZ(-4deg); }
  40%, 100% { transform: rotateZ(0); }
}

/* Pulse Animations */
.pulse-gentle {
  animation: pulseGentle 2s ease-in-out infinite;
}

@keyframes pulseGentle {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.pulse-glow {
  animation: pulseGlow 2s ease-in-out infinite;
}

@keyframes pulseGlow {
  0%, 100% { 
    box-shadow: 0 0 5px rgba(59, 130, 246, 0.4); 
  }
  50% { 
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.8), 0 0 30px rgba(59, 130, 246, 0.4); 
  }
}

/* Slide Animations */
.slide-in-bottom {
  animation: slideInBottom var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes slideInBottom {
  from {
    opacity: 0;
    transform: translateY(100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in-top {
  animation: slideInTop var(--animation-speed-slow) var(--animation-ease-out) forwards;
}

@keyframes slideInTop {
  from {
    opacity: 0;
    transform: translateY(-100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Bounce Animations */
.bounce-in {
  animation: bounceIn var(--animation-speed-slower) var(--animation-bounce) forwards;
}

@keyframes bounceIn {
  from {
    opacity: 0;
    transform: scale3d(0.3, 0.3, 0.3);
  }
  50% {
    opacity: 1;
  }
}

.bounce-in-down {
  animation: bounceInDown var(--animation-speed-slower) ease-out forwards;
}

@keyframes bounceInDown {
  from,
  60%,
  75%,
  90%,
  to {
    animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
  }
  0% {
    opacity: 0;
    transform: translate3d(0, -3000px, 0) scaleY(3);
  }
  60% {
    opacity: 1;
    transform: translate3d(0, 25px, 0) scaleY(0.9);
  }
  75% {
    transform: translate3d(0, -10px, 0) scaleY(0.95);
  }
  90% {
    transform: translate3d(0, 5px, 0) scaleY(0.985);
  }
  to {
    transform: translate3d(0, 0, 0);
  }
}

/* Hover Animations */
.hover-lift {
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.hover-lift:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
}

.hover-grow {
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.hover-grow:hover {
  transform: scale(1.05);
}

.hover-shrink {
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.hover-shrink:hover {
  transform: scale(0.95);
}

.hover-rotate {
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.hover-rotate:hover {
  transform: rotate(5deg);
}

.hover-tilt {
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.hover-tilt:hover {
  transform: perspective(1000px) rotateX(10deg) rotateY(10deg);
}

/* Text Animations */
.typewriter {
  overflow: hidden;
  border-right: 0.15em solid;
  white-space: nowrap;
  margin: 0 auto;
  letter-spacing: 0.15em;
  animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
}

@keyframes typing {
  from { width: 0; }
  to { width: 100%; }
}

@keyframes blink-caret {
  from, to { border-color: transparent; }
  50% { border-color: var(--primary-500); }
}

.text-shimmer {
  background: linear-gradient(90deg, #000 25%, #fff 50%, #000 75%);
  background-size: 200% auto;
  color: transparent;
  -webkit-background-clip: text;
  background-clip: text;
  animation: textShimmer 2s linear infinite;
}

@keyframes textShimmer {
  to {
    background-position: 200% center;
  }
}

/* Scroll-triggered animations */
.scroll-reveal {
  opacity: 0;
  transform: translateY(50px);
  transition: all var(--animation-speed-slow) var(--animation-ease-out);
}

.scroll-reveal.revealed {
  opacity: 1;
  transform: translateY(0);
}

.scroll-reveal-left {
  opacity: 0;
  transform: translateX(-50px);
  transition: all var(--animation-speed-slow) var(--animation-ease-out);
}

.scroll-reveal-left.revealed {
  opacity: 1;
  transform: translateX(0);
}

.scroll-reveal-right {
  opacity: 0;
  transform: translateX(50px);
  transition: all var(--animation-speed-slow) var(--animation-ease-out);
}

.scroll-reveal-right.revealed {
  opacity: 1;
  transform: translateX(0);
}

.scroll-reveal-scale {
  opacity: 0;
  transform: scale(0.8);
  transition: all var(--animation-speed-slow) var(--animation-ease-out);
}

.scroll-reveal-scale.revealed {
  opacity: 1;
  transform: scale(1);
}

/* Loading Animations */
.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid var(--primary-100);
  border-top: 4px solid var(--primary-500);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-dots {
  display: inline-block;
}

.loading-dots::after {
  content: '';
  animation: dots 1.5s infinite;
}

@keyframes dots {
  0%, 20% { content: ''; }
  40% { content: '.'; }
  60% { content: '..'; }
  90%, 100% { content: '...'; }
}

/* Background Animations */
.animated-gradient {
  background: linear-gradient(-45deg, #667eea, #764ba2, #f093fb, #f5576c);
  background-size: 400% 400%;
  animation: gradientShift 8s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.floating-particles {
  position: relative;
  overflow: hidden;
}

.floating-particles::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 199, 255, 0.3) 0%, transparent 50%);
  animation: particleFloat 6s ease-in-out infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes particleFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-10px) rotate(120deg); }
  66% { transform: translateY(5px) rotate(240deg); }
}

/* Interactive Micro-animations */
.micro-interaction {
  position: relative;
  overflow: hidden;
}

.micro-interaction::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 70%);
  transition: all var(--animation-speed-fast) var(--animation-ease);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.micro-interaction:hover::before {
  width: 200px;
  height: 200px;
}

/* Delay utilities */
.delay-100 { animation-delay: 0.1s; }
.delay-200 { animation-delay: 0.2s; }
.delay-300 { animation-delay: 0.3s; }
.delay-500 { animation-delay: 0.5s; }
.delay-700 { animation-delay: 0.7s; }
.delay-1000 { animation-delay: 1s; }

/* Line clamp utilities */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Badge styles */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.badge-primary {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
  color: var(--primary-700);
  border: 1px solid var(--primary-200);
}

.badge-accent {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  border: 1px solid #fcd34d;
}

.badge-success {
  background: linear-gradient(135deg, #d1fae5, #a7f3d0);
  color: #065f46;
  border: 1px solid #6ee7b7;
}

/* Prose styles for blog content - modern theme */
.prose {
  max-width: none;
  color: var(--text-primary);
  line-height: 1.7;
}

.prose h1 {
  font-family: 'Playfair Display', serif;
  font-size: 2.5rem;
  font-weight: 700;
  margin-top: 2rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
  line-height: 1.2;
}

.prose h2 {
  font-family: 'Playfair Display', serif;
  font-size: 2rem;
  font-weight: 600;
  margin-top: 2rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
  line-height: 1.3;
}

.prose h3 {
  font-family: 'Inter', sans-serif;
  font-size: 1.5rem;
  font-weight: 600;
  margin-top: 1.5rem;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
}

.prose p {
  margin-top: 1.25rem;
  margin-bottom: 1.25rem;
  color: var(--text-secondary);
  font-size: 1.1rem;
}

.prose a {
  color: var(--text-accent);
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
  border-bottom: 1px solid transparent;
}

.prose a:hover {
  color: var(--primary-700);
  border-bottom-color: var(--primary-500);
}

.prose code {
  background: var(--surface-tertiary);
  color: var(--primary-700);
  padding: 2px 8px;
  border-radius: 6px;
  font-family: 'SF Mono', Consolas, monospace;
  font-size: 0.9em;
  border: 1px solid #e2e8f0;
}

.prose pre {
  background: var(--text-primary);
  color: white;
  border-radius: 12px;
  padding: 1.5rem;
  overflow-x: auto;
  box-shadow: var(--shadow-md);
  margin: 1.5rem 0;
}

.prose pre code {
  background: transparent;
  color: inherit;
  padding: 0;
  border: none;
  font-size: 0.9rem;
}

.prose blockquote {
  border-left: 4px solid var(--primary-500);
  background: var(--surface-tertiary);
  padding: 1.5rem;
  margin: 2rem 0;
  border-radius: 0 12px 12px 0;
  font-style: italic;
  color: var(--text-secondary);
}

.prose ul, .prose ol {
  color: var(--text-secondary);
  margin: 1.5rem 0;
  padding-left: 2rem;
}

.prose li {
  margin: 0.75rem 0;
}

.prose strong {
  color: var(--text-primary);
  font-weight: 700;
}

/* Image styles */
.image-rounded {
  border-radius: 12px;
  overflow: hidden;
}

.image-elevated {
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
}

.image-elevated:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
}

/* Separator */
.separator {
  height: 1px;
  background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
  margin: 2rem 0;
}

/* Container utilities */
.container-narrow {
  max-width: 768px;
  margin: 0 auto;
  padding: 0 1rem;
}

.container-wide {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* ===== GLASSMORPHISM DESIGN UTILITIES ===== */

/* Base glass effects */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.glass-light {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.25);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.glass-dark {
  background: rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 16px 48px rgba(0, 0, 0, 0.2);
}

/* Glassmorphism cards */
.glass-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.glass-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
}

.glass-card:hover {
  transform: translateY(-8px);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.3);
}

/* Glass navigation */
.glass-nav {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.glass-nav.scrolled {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
  border-bottom-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

/* Glass buttons */
.glass-btn {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.25);
  border-radius: 12px;
  padding: 12px 24px;
  color: var(--text-primary);
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: all var(--animation-speed-normal) var(--animation-ease);
  position: relative;
  overflow: hidden;
}

.glass-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
  opacity: 0;
  transition: opacity var(--animation-speed-normal) var(--animation-ease);
}

.glass-btn:hover {
  transform: translateY(-2px);
  border-color: rgba(255, 255, 255, 0.35);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.glass-btn:hover::before {
  opacity: 1;
}

.glass-btn-primary {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.3), rgba(59, 130, 246, 0.2));
  border-color: rgba(59, 130, 246, 0.4);
  color: white;
}

.glass-btn-primary:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.4), rgba(59, 130, 246, 0.3));
  border-color: rgba(59, 130, 246, 0.5);
}

/* Glass input fields */
.glass-input {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  padding: 12px 16px;
  color: var(--text-primary);
  font-size: 16px;
  transition: all var(--animation-speed-normal) var(--animation-ease);
}

.glass-input::placeholder {
  color: rgba(var(--text-primary-rgb), 0.6);
}

.glass-input:focus {
  outline: none;
  border-color: rgba(59, 130, 246, 0.5);
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Glass modals and overlays */
.glass-modal {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  backdrop-filter: blur(40px);
  -webkit-backdrop-filter: blur(40px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 24px;
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.2);
}

.glass-overlay {
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

/* Floating glass elements */
.glass-float {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  animation: float 6s ease-in-out infinite;
}

.glass-float:nth-child(2) {
  animation-delay: -2s;
}

.glass-float:nth-child(3) {
  animation-delay: -4s;
}

/* Glass badges and tags */
.glass-badge {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.15));
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  padding: 4px 12px;
  font-size: 12px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

/* Glass progress bars */
.glass-progress {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  overflow: hidden;
  height: 8px;
}

.glass-progress-bar {
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.6), rgba(59, 130, 246, 0.8));
  height: 100%;
  border-radius: 10px;
  transition: width var(--animation-speed-slow) var(--animation-ease);
}

/* Glass tooltip */
.glass-tooltip {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
  color: white;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* Gradient glass effects */
.glass-gradient-blue {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(59, 130, 246, 0.05));
  border-color: rgba(59, 130, 246, 0.3);
}

.glass-gradient-purple {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.05));
  border-color: rgba(139, 92, 246, 0.3);
}

.glass-gradient-pink {
  background: linear-gradient(135deg, rgba(236, 72, 153, 0.2), rgba(236, 72, 153, 0.05));
  border-color: rgba(236, 72, 153, 0.3);
}

.glass-gradient-green {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(34, 197, 94, 0.05));
  border-color: rgba(34, 197, 94, 0.3);
}

